{
  "name": "electron-react-typescript",
  "version": "0.0.1",
  "description": "Barebones starter kit with TypeScript, React, react-router, and Jest",
  "main": "dist/main.js",
  "scripts": {
    "build": "",
    "dev:main": "cross-env NODE_ENV=development webpack --config webpack.main.js && ./node_modules/.bin/electron dist/main.js",
    "dev:renderer": "cross-env NODE_ENV=development webpack-dev-server --config webpack.renderer.js",
    "lint": "./node_modules/.bin/tslint -c \"tslint.json\" -e \"node_modules/**/*\"  \"./src/**/*.{ts,tsx}\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prettier": "prettier \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "start": "cross-env NODE_ENV=production npm run build && electron ./dist/main.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Loc Nguyen <lochnguyen@gmail.com>",
  "license": "MIT",
  "precommit": [
    "precommit-msg",
    "prettier:check",
    "lint"
  ],
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.0.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.2.7",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-import": "^1.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-reload": "^1.2.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.13.4",
    "react-hot-loader": "^4.3.0",
    "react-test-renderer": "^16.4.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "workbox-webpack-plugin": "^3.2.0"
  },
  "dependencies": {
    "antd": "^3.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.3.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src)/.*\\.test\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "~/([^\\.]*)$": "<rootDir>/src/$1"
    }
  }
}
